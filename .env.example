# Server Configuration
NODE_ENV=development
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/securetag
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/securetag?retryWrites=true&w=majority

# JWT Secret (generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (Gmail)
EMAIL_USER=securetag6@gmail.com
EMAIL_PASS=your-gmail-app-password
# Note: Use App Password for Gmail, not your regular password
# Generate at: https://myaccount.google.com/apppasswords

# Redis Configuration (optional, for caching and sessions)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# External APIs (if needed)
GEOLOCATION_API_KEY=your-geolocation-api-key
SMS_API_KEY=your-sms-api-key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Webhook URLs (for notifications)
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url